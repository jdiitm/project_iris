[
 {iris_core, [
    {join_seeds, []},
    {auto_init_db, true},
    
    %% Data safety: NEVER auto-delete corrupted tables in tests
    {allow_table_nuke, false},
    
    %% Quorum writes: default replication factor
    {replication_factor, 3},
    
    %% Regional routing: single region for local tests
    {region_id, <<"local">>},
    {regions, []},
    
    %% Consistency mode: hardened_ap (default) or cp
    {consistency_mode, hardened_ap}
 ]},
 {iris_edge, [
    {core_nodes, []},
    {allow_insecure, true},  %% RFC NFR-14: Only for testing; production MUST use TLS
    
    %% Router pool: let auto-tune decide (or set explicitly)
    %% {router_pool_size, 8}
    
    %% Authentication
    {jwt_secret, <<"test_secret_key_for_testing_only">>},
    {auth_enabled, false}  %% Disabled for unit tests
 ]}
].
